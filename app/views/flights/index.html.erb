<% provide(:title, "Search Flights") %>

<div class="container-fluid">
	<div class="row">
		<div class="well col-md-4 col-md-offset-4">
			<h3>Search for a Flight</h3>
			<hr>
			<%= form_tag root_path, method: 'get'  do%>
			<%= hidden_field_tag :search %>
			<div class="col-md-6">
				<p>Departing from: <%= select(:airport,:code,@airport_options) %></p>
				<p>Arriving in: <%= select(:airport,:city,@airport_options) %></p>
			</div>
			<div class="col-md-6">
				<p>Date: <%= select(:flight, :start_date, @flight_options) %></p>
				<p>Number of Passengers: <%= select_tag :passengers, options_for_select(@passengers) %> </p>	
			</div>
			<%= submit_tag "Search", :name => nil, class: "btn col-md-offset-5" %>
			<% end %>
		</div>
	</div>
</div>